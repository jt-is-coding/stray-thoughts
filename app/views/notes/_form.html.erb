<%= form_with(model: [@game, @note], local: true) do |form| %>
  <% if note.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="trix-content">
    <%= form.rich_text_area :content %>
  </div>
  <%# Having a hidden field here allows a user to change the User ID in the browser which is a security risk. %>
  <div>
    <%= form.hidden_field :author_id, value: current_user.id %>
  </div>

  <%# Having a hidden field here allows a user to change the game ID in the browser. %>
  <div>
    <%= form.hidden_field :parent_id, value: @game.id %>
  </div>

  <div class="pt-1">
    <%= form.submit("Update", class: "btn btn-dark") %>
  </div>
<% end %>
