<p style="color: green"><%= notice %></p>

<h1 class="text-center">Notes</h1>

<%= search_form_for @q do |f| %>
  <div class="my-2">
    <%= f.text_field :searchable_content_cont, :placeholder => "search notes", class: "form-control" %>
  </div>
<% end %>

<div id="notes" class="d-flex flex-wrap justify-content-center">
  <% @notes.each do |note| %>
    <div class="pt-3 pb-4 ps-3">
      <%= render partial: "/notes/note_small", locals: { note: note } %>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center">
  <%= paginate @notes %>
</div>
